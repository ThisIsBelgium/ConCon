@model ConCon.Models.ArtistSearchViewModel
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search</h2>
<div class="form-group">
    @Html.LabelFor(m => m.Search, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.Search, new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" class="btn btn-default" value="Search" onclick="location.href='@Url.Action("SearchResult","ArtistSearch")'"/>
    </div>
</div>
