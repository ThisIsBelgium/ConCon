@model IEnumerable<ConCon.Models.PerformerViewModel>
@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Search Result</h2>

<div>
    <p>Here is a list of the list of Artists that match the name you searched for. Select one with the "Search For Similar Artists" below to see a selection of like acts:</p>
    <br />
    <table>
        @foreach (ConCon.Models.PerformerViewModel performer in Model)
        {
            <tr>
                <th>
                    @if (performer.image != null)
                    {
                        <img src="@Html.DisplayFor(modelItem => performer.image)" alt="No Image" />
                    }
                    else
                    {
                        <img src="http://4vector.com/i/free-vector-default-profile-picture_099397_Default_Profile_Picture.png" alt="No Image" style="height: 10% ; width: 10%" />
                    }
                </th>
                <th>
                    @Html.DisplayFor(modelItem => performer.name)
                </th>
                @*<th>
                        @Html.Display(performer.genres?[0]?.name ?? "N/A")
                    </th>*@
                <th>
                    <a href="@Html.DisplayFor(modelItem => performer.url)">Check For Tickets</a>
                </th>
                <th>
                    @Html.ActionLink("Search For Similar Artists", "SearchSimilar", "ArtistSearch", new {id = performer.id }, new { })
                </th>
            </tr>
        }

    </table>
</div>
